      <Label X:Name="Wind_Direction"
    Grid.Row="1"
     Grid.Column="1"
     TextColor="Black"
     FontSize="50"
     FontFamily="OpenSans-Regular"
     Grid.RowSpan="3"/>

       <Label X:Name="moon_phaon"
    Grid.Row="1"
     Grid.Column="1"
     TextColor="Black"
     FontSize="50"
     FontFamily="OpenSans-Regular"
     Grid.RowSpan="3"/>

      <Label X:Name="img_id"
